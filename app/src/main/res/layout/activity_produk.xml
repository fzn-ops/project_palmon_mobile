<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produk">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"
                    android:backgroundTint="@color/green"
                    android:id="@+id/t_produk_toko"
                    android:layout_gravity="center">
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Toko"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="center">
                </TextView>
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/g_desc_bibit_sawit"
                    android:layout_gravity="center">
                </ImageView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="50dp"
                   android:layout_marginRight="50dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Bibit Sawit"
                       android:textSize="20dp"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_marginTop="20dp">
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Pilihan bibit sawit terbaik yang dirawat\nsepenuh hati seperti anak sendiri."
                       android:textSize="14dp"
                       android:fontFamily="@font/poppins_regular">
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Jenis Sawit"
                       android:textSize="20dp"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_marginTop="20dp">
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sawit-sawitan"
                       android:textSize="14dp"
                       android:fontFamily="@font/poppins_regular">
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Jenis Sawit"
                       android:textSize="20dp"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_marginTop="20dp">
                   </TextView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Rp 200/bibit"
                       android:textSize="14dp"
                       android:fontFamily="@font/poppins_regular">
                   </TextView>
               </LinearLayout>
           </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:layout_margin="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_buy">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pembelian"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp">
                            </TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"
                                android:layout_marginLeft="10dp">
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Barang"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1,2,3,etc"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12dp"
                        android:inputType="number"
                        android:id="@+id/jumlah_barang_bibit_sawit">
                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="JL.Mawar..."
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12dp"
                        android:id="@+id/alamat">
                    </AutoCompleteTextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/metode_pembayaran_sawit">
                    </Spinner>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garansi"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/switch_garansi">
                    </Switch>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Harga"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginTop="15dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 0"
                                android:fontFamily="@font/poppins_regular"
                                android:id="@+id/harga_total_bibit_sawit">
                            </TextView>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pesan"
                            android:backgroundTint="@color/green"
                            android:layout_marginStart="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/t_produk_pesan">
                        </Button>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>